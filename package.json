{
  "name": "tree-doctor-pdf-qa-mcp",
  "version": "1.0.0",
  "description": "나무의사 자격증 PDF 기반 질문답변 시스템 MCP 서버",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "node scripts/postbuild.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:win": "node dist\\index.js",
    "test": "node --test",
    "setup-claude": "node scripts/setup-claude-desktop.js",
    "import-exams": "npm run build && node dist/scripts/import-exams.js",
    "setup": "npm run convert-markdown && npm run setup-data",
    "convert-markdown": "node scripts/convert-markdown-to-json.js",
    "setup-data": "node scripts/setup-complete-data.js"
  },
  "keywords": [
    "mcp",
    "tree-doctor",
    "pdf-qa",
    "question-answer",
    "education",
    "ai-assistant"
  ],
  "author": "VoidLight",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "cheerio": "^1.0.0-rc.12",
    "fuse.js": "^7.0.0",
    "markdown-it": "^14.0.0",
    "markitdown-js": "^0.0.14",
    "node-fetch": "^3.3.2",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "sqlite3": "^5.1.6",
    "tesseract.js": "^6.0.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.0.0",
    "@types/node": "^20.11.16",
    "@types/pdf-parse": "^1.1.5",
    "@types/uuid": "^9.0.8",
    "typescript": "^5.3.3"
  },
  "bin": {
    "tree-doctor-pdf-qa-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
